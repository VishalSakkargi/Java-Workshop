public class Car {
    private String color;

    // Getter
    public String getColor() {
        return color;
    }

    // Setter
    public void setColor(String color) {
        this.color = color;
    }
}

public class Main {
    public static void main(String[] args) {
        Car myCar = new Car();

        myCar.setColor("Red");  // Setting color using setter
        System.out.println("Car color: " + myCar.getColor());  // Getting color using getter
    }
}
